{% extends 'base.html.twig' %}

{% block title %}Petit Blog{% endblock %}

{% block body %}
<!-- Header -->
<header id="header">
    <div class="logo"><a href="{{ path('blog') }}">Petit Blog <span>by QLF</span></a></div>
</header>
<!-- Main -->
<section id="main">
    <div class="inner">
    <!-- Three -->
        <section id="three" class="wrapper">
               
            
            {% for article in articles %}
                {% if article.star == 1 %}
                <div class="spotlight">
                    <div class="image flush"><img src="{{ article.urlImg }}" alt="" /></div>
                    <div class="inner">
                        <h3>{{ article.titre }}</h3>
                        <span>{{ article.content |slice(0, 55)|raw}} . . .</span>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="button special small mt-btn">Lire l'article</a>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            <section class="wrapper style2">
                <header>
                    <h2>Categories</h2>
                    <p>
                    {% for category in categorys %}
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="norm-p">{{category.name}}</a>
                    {% endfor %}
                    </p> 
                </header>
                
            </section>
            {% set myVal = 0 %}
            {% for article in pagination %}
                {% set myVal = myVal + 1 %}
                {% if myVal is odd %}
                <div class="spotlight">
                    <div class="image flush"><img src="{{ article.urlImg }}" alt="" /></div>
                    <div class="inner">
                        <h3>{{ article.titre }}</h3>
                        <span>{{ article.content |slice(0, 55)|raw}} . . .</span>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="button special small mt-btn">Lire l'article</a>
                    </div>
                </div>
                {% else %}
                <div class="spotlight alt">
                    <div class="image flush"><img src="{{ article.urlImg }}" alt="" /></div>
                    <div class="inner">
                        <h3>{{ article.titre }}</h3>
                        <span>{{ article.content |slice(0, 55)|raw}} . . .</span>
                        <a href="{{ path('article_show', {'id': article.id}) }}" class="button special small mt-btn">Lire l'article</a>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
        </section>
        
    </div>
    <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
</section>
{% endblock %}

